.section(class='{{getErrorClass}}')
	.section-header {{getEntityTranslation getKey}}
	.section-select
		select(name='{{getKey}}')
			with 'placeholder'
				option(value) {{getEntityTranslation getItemKey}}
			each item in items
				option(value='{{item}}')
					with item
						| {{getEntityTranslation getItemKey}}
	if hasError
		.section-error
			p {{getEntityErrorTranslation}}
