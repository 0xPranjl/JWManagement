.navigation-wrapper
	nav.navbar.navbar-fixed-top
		a.navbar-back(href="{{getBackLink}}")
			i.fa.fa-angle-left.m-r-xs
			| {{_ 'navigation.back'}}
		.navbar-title {{getTitle}}
		if isDropdown
			+UpdateFormDropdownInputHeader

if isDropdown
	+UpdateFormDropdownInput
else
	form.form-horizontal
		.section
			.section-header {{getEntityTranslation}}
			if isText
				+UpdateFormTextInput data=textInputData
			else if isDate
				+UpdateFormDateInput data=dateInputData
