template(name="SearchForm")
    .navigation-wrapper
        nav.navbar.navbar-fixed-top
            a.navbar-back(href="{{getBackLink}}")
                i.fa.fa-angle-left.m-r-xs
                | {{_ 'navigation.back'}}
            .navbar-title {{getTitle}}
            .search.input-group
                span.input-group-addon &#xF002;
                input#search.form-control(type='search' placeholder='{{getTranslation "placeholder"}}' autocomplete='off' autofocus)
            if isLoading
                .search-title.clearfix
                    i.fa.fa-circle-o-notch.fa-spin
                    | {{_ 'searchForm.loading'}}...
            else if noResults
                if hasSearchString
                    .search-title {{_ 'searchForm.noResults'}}
                else
                    .search-title {{_ 'searchForm.typeToSearch'}}
            else
                .search-title.clearfix
                    .pull-left {{_ 'searchForm.xResults' totalFound count=totalFound}}
                    if moreResultsAvailable
                        .pull-right {{_ 'searchForm.showingTheFirstX' maxResultsShown}}
                    else
                        .pull-right {{_ 'searchForm.showingAll' count=totalFound}}

    table#table.table.table-stripped.results-desktop

    unless noResults
        table.results-mobile
            each resultsMobile
                a(href='{{link}}')
                    tr
                        th.left
                        th
                            each columns
                                b {{th}}:
                        td.item
                            each columns
                                span {{valueOrDash td}}
                        td.link
                            i.fa.fa-chevron-right

    if noResults
        p.noResultsOr.center-align.m-lg {{_ 'searchForm.or'}}
        .m-sm
            button#createNew.btn.btn-primary.btn-block.p-xs {{_ 'searchForm.createNew'}}
    else if moreResultsAvailable
        .m-sm.p-b-lg
            button#more.btn.btn-primary.btn-block.p-xs {{_ 'searchForm.showAll' totalFound}}
