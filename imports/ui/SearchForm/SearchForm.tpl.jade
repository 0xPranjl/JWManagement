.navigation-wrapper
	nav.navbar.navbar-fixed-top
		a.navbar-back(href="{{getBackLink}}")
			i.fa.fa-angle-left.m-r-xs
			| {{_ 'navigation.back'}}
		.navbar-title {{getTranslation 'title'}}
		.search.input-group
			span.input-group-addon &#xF002;
			input#search.form-control(type='text' placeholder='{{getTranslation "placeholder"}}' autocomplete='off')
		if isLoading
			.search-title.clearfix
				i.fa.fa-circle-o-notch.fa-spin
				| {{_ 'searchForm.loading'}}...
		else if noResults
			.search-title {{_ 'searchForm.noResults'}}
		else
			.search-title.clearfix
				.pull-left {{_ 'searchForm.xResults' totalFound count=totalFound}}
				if moreResultsAvailable
					.pull-right {{_ 'searchForm.showingTheFirstX' maxResultsShown}}
				else
					.pull-right {{_ 'searchForm.showingAll' count=totalFound}}

table#table.table.table-stripped.results-desktop

if resultsMobile
	table.results-mobile
		each resultsMobile
			a(href='{{_id}}')
				tr
					th.left
					th
						each columns
							b {{th}}:
					td.item
						each columns
							span {{valueOrDash td}}
					td.link
						i.fa.fa-chevron-right

if noResults
	.center-align.m-t-xl.m-b-sm
		if hasSearchString
			p We couldn't find anything
			p But you can create a new entry
		else
			p Type to search. Type * to see everything.
			p Or create a new entry
		button#createNew.btn.btn-primary.btn-circle
			i.fa.fa-plus
else if moreResultsAvailable
	.center-align.m-t-sm.m-b-sm
		button#more.btn.btn-primary.btn-outline.btn-circle
			i.fa.fa-arrow-down
