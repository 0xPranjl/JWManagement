.welcome-wrapper
	nav.navbar.navbar-default.navbar-fixed-top.my-nav(role='navigation')
		.container
			.navbar-header
				button.navbar-toggle(data-toggle='collapse' data-target='.navbar-collapse')
					span.icon.icon-bar
					span.icon.icon-bar
					span.icon.icon-bar
				a.navbar-brand(href="https://www.jwmanagement.org") JW Management
			.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right.text-uppercase
					li
						+languageSwitch
					li.toApp
						if currentUser
							a#toDashboard(href) {{_ 'welcome.links.dashboard'}}
						else
							a#toLogin(href) {{_ 'welcome.links.login'}}
	section#home
		.overlay.no-dim
			.container
				.row
					.col-md-1
					.col-md-10.wow.fadeIn
						h1.text-upper {{_ 'welcome.header.title'}}
						p.tm-white  {{_ 'welcome.header.description'}}
						img.img-responsive(src='/landing/shifts.png' alt='home img')
					.col-md-1
	section#divider
		.container
			.row
				.col-md-3.wow.fadeInUp
					i.fa.fa-tag
					h3.text-uppercase {{_ 'welcome.divider.first.title'}}
					p {{_ 'welcome.divider.first.description'}}
				.col-md-3.wow.fadeInUp
					i.fa.fa-users
					h3.text-uppercase {{_ 'welcome.divider.second.title'}}
					p {{_ 'welcome.divider.second.description'}}
				.col-md-3.wow.fadeInUp
					i.fa.fa-cubes
					h3.text-uppercase {{_ 'welcome.divider.third.title'}}
					p {{_ 'welcome.divider.third.description'}}
				.col-md-3.wow.fadeInUp
					i.fa.fa-envelope
					h3.text-uppercase {{_ 'welcome.divider.fourth.title'}}
					p {{_ 'welcome.divider.fourth.description'}}
	section#feature1.feature.feature-inverted
		.container
			.row
				.col-sm-6.wow.fadeInRight
					img.img-responsive(src='/landing/multifunctional.png' alt='multifunctional img' style="max-height:300px;")
				.col-sm-6.wow.fadeInLeft
					h2.text-uppercase {{_ 'welcome.feature1.title'}}
					| {{{_ 'welcome.feature1.description'}}}
	section#feature2.feature
		.container
			.row
				.col-sm-6.wow.fadeInLeft
					img.img-responsive(src='/landing/product.png' alt='open-source img' style="max-height:300px;")
				.col-sm-6.wow.fadeInRight
					h2.text-uppercase {{_ 'welcome.feature3.title'}}
					| {{{_ 'welcome.feature3.description'}}}
					p
						i.fa.fa-credit-card-alt
						| {{_ 'welcome.feature3.free'}}
					p
						i.fa.fa-code
						a(href="https://github.com/JWDeveloper/JWManagement")
							| {{_ 'welcome.feature3.repo'}}
	section
		.overlay
			.container
				.row.center-align
					.col-xs-12.wow.fadeInUp
						a.link-inverted(href='{{pathFor "terms"}}') {{_ "welcome.contact.terms"}}
						| |
						a.link-inverted(href='{{pathFor "privacy"}}') {{_ "welcome.contact.privacy"}}
	script(src="/lib/wow.min.js")
	script(src="/lib/singlePageNav.min.js")
