.navigation-wrapper
	nav.navbar.navbar-fixed-top
		a.navbar-back(href="{{getBackLink}}")
			i.fa.fa-angle-left.m-r-xs
			| {{_ 'navigation.back'}}
		.navbar-title {{getKeyTranslation}}
		if isDropdown
			+DropdownHeader

if isDropdown
	+DropdownInput
else
	form.form-horizontal
		.section
			.section-header {{getKeyTranslation}}
			if isText
				+TextInput data=textInputData
			else if isDate
				+DateInput data=dateInputData
