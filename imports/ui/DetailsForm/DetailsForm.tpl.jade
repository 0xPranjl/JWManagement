.navigation-wrapper
	nav.navbar.navbar-fixed-top
		a.navbar-back(href="{{getBackLink}}")
			i.fa.fa-angle-left.m-r-xs
			| {{_ 'navigation.back'}}
		.navbar-title {{getTranslation 'title'}}

form.form-horizontal
	if isLoading
		.center-align
			i.fa.fa-circle-o-notch.fa-spin
	else if noResult
		.center-align
			h2 Oops!
			p We couldn't find anything.
			button#back.btn.btn-primary Go back
	else
		each sections
			.section
				.section-header {{getTranslation header}}
				.section-content
					each contents
						.input.form-group(key='{{key}}')
							.key {{getEntityTranslation key}}
							.value
								| {{getValue key}}
								i.fa.fa-angle-right.icon
