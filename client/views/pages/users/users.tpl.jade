if queryParam 'addUser'
	+addUserModal
if queryParam 'editUser'
	+editPermissionsModal
if queryParam 'inviteUser'
	+inviteUserModal
if queryParam 'uploadUserFile'
	+uploadUserFileModal
.wrapper-content.animated.fadeInUp
	.container
		.row
			.col-lg-12
				.row.m-b-lg
					.col-xs-12
						if isProjectAdmin
							h2.center-align.m-t-xs.m-b-none {{_ 'users.title'}}
						else
							h2.center-align {{_ 'role.noPermission'}}
				if isProjectAdmin
					.ibox
						.ibox-content
							table#userTable.table.table-stripped
								.sk-spinner.sk-spinner-pulse
							button.btn.btn-primary.inline#addNewUser
								i.fa.fa-user-plus
								| {{_ 'users.addNewUser'}}
							button.btn.btn-primary.inline#inviteUser
								i.fa.fa-send
								| {{_ 'users.inviteUser'}}
							a.btn.btn-primary.inline.pull-right(href="mailto:?bcc={{allMails}}")
								i.fa.fa-send
								| {{_ 'users.sendToAll'}}
							button.btn.btn-primary.inline.pull-right.m-r-sm#exportUsers
								i.fa.fa-download
								| {{_ 'users.export'}}
