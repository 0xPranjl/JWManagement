.first-login-box.animated.fadeInDown
	.row
		.col-xs-12
			.ibox-content
				with user
					h2.font-bold.text-center.m-b-lg {{_ "firstLogin.name"}}
					p.center-align {{{_ "firstLogin.text"}}}
					if getErrorMessage
						.alert.alert-danger {{getErrorMessage}}
					.row
						.col-lg-12
							form.m-t
								.form-group
									input#username.form-control(type='text' placeholder='{{_ "input.username"}}' required)
								.form-group
									input#password1.form-control(type='password' placeholder='{{_ "input.password"}}' required)
								.form-group
									input#password2.form-control(type='password' placeholder='{{_ "input.passwordRepeat"}}' required)
								.form-group
									.checkbox.checkbox-inline
										input#agreeTerms(type='checkbox')
										label(for='agreeTerms') {{{_ 'firstLogin.agreeTerms'}}}
								button.btn.btn-primary.block.full-width(type='submit') {{_ "firstLogin.button"}}
				else
					if loggingIn
						.sk-spinner.sk-spinner-pulse
					else if isLoading
						h2.center-align
							i.fa.fa-spinner.fa-pulse
					else
						h2.center-align {{{_ 'resetPassword.noUserFound'}}}
	.dropdown.m-t.text-center
		+languageSwitch
	p.m-t.text-center
		a(href="{{pathFor 'home' language=langTag}}") {{_ "resetPassword.back"}}
