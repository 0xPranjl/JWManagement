.navigation-wrapper
	nav.navbar.navbar-fixed-top
		a.navbar-back(href="{{getBackLink}}")
			i.fa.fa-angle-left.m-r-xs
			| {{_ 'navigation.back'}}
		.navbar-title {{getTitle}}

form.form-horizontal
	each section in sections
		.section
			if section.header
				.section-header {{getDetailTranslation section.header}}
			.section-content
				each content in section.contents
					if isText
						+TextInput data=textInputData
					else if isDate
						+DateInput data=dateInputData
